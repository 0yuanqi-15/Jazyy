<section class="login">
    <br><br>
    <form action="/user/login" method="post">
        <label_login>Username</label_login><br>
        <input type="text" name="accountName" value="" id="inputUsername" placeholder="Please enter your username"/>
        <br>
        <br>
        <label_login>Password</label_login>
        <br>
        <input type="password" name="password" value="" id="inputPassword" placeholder="Please enter your password"/>
        <br>
        <monkey style="margin-left: 230px; margin-top: -33px"><hide class="showpw" id="pw" onclick="showpw()" type =
                button>&#128584;</hide></monkey>

        <div>
            <article class="message">
                <div> {{message}} </div>
            </article>
        </div>
        <br>
        <article><button type="submit">Login</button></article>
        <br>

        <article>Don't have an account?&#129488;
            <a href = "/user/sign-up"><u>Sign up now!</u></a></article>
    </form>
    <script>
        function showpw(){
            if(document.getElementById("inputPassword").valueOf().type != "text") {
                document.getElementById("inputPassword").valueOf().type = "text";
                document.getElementById("pw").innerText = "\uD83D\uDE4A";
            }else{
                document.getElementById("inputPassword").valueOf().type = "password";
                document.getElementById("pw").innerText = "\uD83D\uDE48";
            }
        }
    </script>
</section>